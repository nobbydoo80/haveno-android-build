<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Haveno" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/haveno_primary</item>
        <item name="colorPrimaryVariant">@color/haveno_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/haveno_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.Haveno.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Haveno.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/haveno_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_haveno_notification</item>
        <item name="postSplashScreenTheme">@style/Theme.Haveno</item>
    </style>
</resources>